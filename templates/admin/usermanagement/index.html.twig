{% extends 'base.html.twig' %}

{% block title %}{{ 'User Management'|trans }}{% endblock %}

{% block body %}
<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4">{{ 'User Management'|trans }}</h1>

    <ul class="list-disc pl-4">
        <li>
            <a href="{{ path('app_admin_usermanagement_create') }}" class="text-blue-500 hover:text-blue-700">
                {{ 'Create new user'|trans }}
            </a>
        </li>
    </ul>

    <table class="table-auto min-w-[50%] w-fit border border-gray-300">
        <thead>
            <tr class="bg-gray-100">
                <th class="px-4 py-2">{{ 'Email'|trans }}</th>
                <th class="px-4 py-2 max-w-[200px]">{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr class="text-center">
                    <td class="px-4 py-2">{{ user.email }}</td>
                    <td class="px-4 py-2 flex justify-evenly">
                        <a href="{{ path('app_admin_usermanagement_edit', {id: user.id}) }}" class="text-blue-500 hover:text-blue-700">
                            {{ 'Edit'|trans }}
                        </a>
                        <a href="{{ path('app_admin_usermanagement_delete', {id: user.id}) }}" class="text-red-500 hover:text-red-700">
                            {{ 'Delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

