{% extends 'base.html.twig' %}
{% set labelAttributes = {'label_attr': {'class': 'sr-only'}} %}

{% block body %}
    <div class="flex flex-col items-center justify-center">
        <h1 class="text-3xl font-bold mb-4">{{ 'Settings'|trans }}</h1>
        
        {{ form_errors(form) }}
        
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        {{ form_row(form.site_name, {'label': 'Site Name', 'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md'}}) }}
        {{ form_row(form.site_description, {'label': 'Site Description', 'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md'}}) }}
        
        <div class="flex justify-center">
            <button type="submit" class="btn bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md">{{ 'Save'|trans }}</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

