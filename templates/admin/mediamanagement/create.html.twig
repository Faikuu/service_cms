{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-3xl font-bold mb-4">Upload Media</h1>

    {{ form_errors(form) }}

    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        {{ form_row(form.filename, {'label': 'File', 'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md'}}) }}

        <button type="submit" class="btn bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md">Upload</button>
    {{ form_end(form) }}
{% endblock %}

