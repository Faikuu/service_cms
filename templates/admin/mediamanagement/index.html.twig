{% extends 'base.html.twig' %}

{% block title %}{{ 'Media Management'|trans }}{% endblock %}

{% block body %}
<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4">{{ 'Media Management'|trans }}</h1>
    <p class="mb-4">
        <a href="{{ path('app_admin_mediamanagement_create') }}" class="text-blue-500 hover:text-blue-700">
            {{ 'Create new media'|trans }}
        </a>
    </p>

    <table class="table-auto w-full border border-gray-300">
        <thead>
            <tr class="bg-gray-100">
                <th class="px-4 py-2">{{ 'Filename'|trans }}</th>
                <th class="px-4 py-2">{{ 'Entity type'|trans }}</th>
                <th class="px-4 py-2">{{ 'Entity id'|trans }}</th>
                <th class="px-4 py-2">{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for media in items %}
                <tr class="text-center">
                    <td class="px-4 py-2">
                        {# {{ media.filename }} #}
                        <img src={{media.filename}} class="h-20 w-auto">
                    </td>
                    <td class="px-4 py-2">{{ media.entityType }}</td>
                    <td class="px-4 py-2">{{ media.idEntity }}</td>
                    <td class="px-4 py-2">
                        <a href="{{ path('app_admin_mediamanagement_edit', {id: media.id}) }}" class="text-blue-500 hover:text-blue-700">
                            {{ 'Edit'|trans }}
                        </a>
                        <a href="{{ path('app_admin_mediamanagement_delete', {id: media.id}) }}" class="text-red-500 hover:text-red-700">
                            {{ 'Delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

