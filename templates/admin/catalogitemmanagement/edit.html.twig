{% extends 'base.html.twig' %}
{% set labelAttributes = {'label_attr': {'class': 'sr-only'}} %}

{% block body %}
    <div class="flex flex-col items-center justify-center">
        <h1 class="text-3xl font-bold mb-4">{{ 'Edit catalog item'|trans }}</h1>
        
        {{ form_errors(form) }}
        
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        {{ form_row(form.name, {'label': 'Name', 'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md'}}) }}
        {{ form_row(form.description, {'label': 'Description', 'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md'}}) }}
        {{ form_row(form.reference, {'label': 'Reference', 'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md'}}) }}
        {{ form_row(form.price, {'label': 'Price', 'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md'}}) }}
        {{ form_row(form.price_promo, {'label': 'Price Promo', 'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md'}}) }}
        {{ form_row(form.promo_until, {'label': 'Promo Until', 'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md'}}) }}
        {{ form_row(form.type, {'label': 'Type', 'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md'}}) }}
        
        <div class="flex justify-center">
            <button type="submit" class="btn bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md">{{ 'Edit'|trans }}</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

