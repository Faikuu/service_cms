{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="max-w-screen-sm self-center text-center bg-secondary p-2 rounded-lg">
        <h1 class="text-3xl font-bold mb-4">Register</h1>

        {{ form_errors(registrationForm, {'attr': {'class': 'text-red-600 mb-4'}}) }}

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
            {{ form_row(registrationForm.email, {'label_attr': {'class': 'sr-only'}, 'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md'}}) }}
            {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'label_attr': {'class': 'sr-only'}, 'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md'}}) }}
            {{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'px-2'}, 'attr': {'class': 'mt-2'}}) }}

            <button type="submit" class="btn bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
