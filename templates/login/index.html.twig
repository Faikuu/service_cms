{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="max-w-screen-sm self-center text-center bg-secondary p-2 rounded-lg">
        <h1 class="text-3xl font-bold mb-4">Login</h1>

        {% if error %}
            <div class="text-red-600 mb-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post" class="space-y-4">
            <label for="username" class="sr-only">Email</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required class="w-full px-4 py-2 border border-gray-300 rounded-md">

            <label for="password" class="sr-only">Password</label>
            <input type="password" id="password" name="_password" required class="w-full px-4 py-2 border border-gray-300 rounded-md">

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {# <input type="hidden" name="_target_path" value="/account"> #}

            <button type="submit" class="btn bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md">Login</button>

            <div class="flex items-center my-4">
                <hr class="w-1/2 self-center">
                <span class="text-sm text-gray-600 mx-4">or</span>
                <hr class="w-1/2 self-center">
            </div>

            <p class="mt-4 text-sm text-gray-600"><a href="{{ path('app_register') }}" class="hover:underline">Sign up</a></p>
        </form>
    </div>
{% endblock %}

