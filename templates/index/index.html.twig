{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col max-w-screen-xl w-[90%] mx-auto p-8 gap-4">
        <h2 class="text-2xl font-semibold mb-6">Polecane produkty</h2>

        <div class="flex gap-4 overflow-x-auto pb-2 mb-8">
            <button class="px-4 py-2 border border-gray-300 rounded-full bg-white text-gray-800 font-medium whitespace-nowrap active:bg-blue-600 active:text-white">Wszystko</button>
            <button class="px-4 py-2 border border-gray-300 rounded-full bg-white text-gray-800 font-medium whitespace-nowrap">Usługi</button>
            <button class="px-4 py-2 border border-gray-300 rounded-full bg-white text-gray-800 font-medium whitespace-nowrap">Odżywki</button>
            <button class="px-4 py-2 border border-gray-300 rounded-full bg-white text-gray-800 font-medium whitespace-nowrap">Sprzęt do ćwiczeń</button>
            <button class="px-4 py-2 border border-gray-300 rounded-full bg-white text-gray-800 font-medium whitespace-nowrap">Odzież</button>
            <button class="px-4 py-2 border border-gray-300 rounded-full bg-white text-gray-800 font-medium whitespace-nowrap">Karnety</button>
        </div>

        <div class="flex gap-4">
            {% for item in items %}
                <div class="bg-white rounded-lg shadow-md hover:-translate-y-1 transition-transform duration-300 overflow-hidden">
                    <img src="{{ item.imageUrl|default('https://www.claudeusercontent.com/api/placeholder/400/320') }}" alt="{{ item.name }}" class="w-auto h-32">
                    <div class="p-4">
                        <h3 class="text-lg font-semibold min-h-[42px]">{{ item.name }}</h3>
                        {% if item.price %}
                            <p class="text-blue-600 font-bold mb-2">{{ item.price }} PLN</p>
                        {% endif %}
                        <p class="text-sm text-gray-600 mb-4">{{ item.description }}</p>
                        <button class="bg-blue-600 text-white w-full py-2 rounded hover:bg-blue-700 transition-colors duration-300">
                            Dodaj do koszyka
                        </button>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
